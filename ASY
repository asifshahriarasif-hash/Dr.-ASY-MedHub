    <div id="pharmacology-page-content" class="page-content hidden py-16 md:py-24">
        <div class="container mx-auto px-4">
            <button id="back-to-main-from-pharma" class="flex items-center mb-8 text-sky-600 font-semibold hover:text-sky-800 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
