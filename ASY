    <!-- JavaScript for page navigation, mobile menu and smooth scrolling -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const showAnatomyPageButton = document.getElementById('show-anatomy-page');
            const showSkeletalSystemPageButton = document.getElementById('show-skeletal-system-page');
            const showPharmacologyPageButton = document.getElementById('show-pharmacology-page');
            const backToMainButton = document.getElementById('back-to-main');
            const backToAnatomyButton = document.getElementById('back-to-anatomy');
            const backToMainFromPharmaButton = document.getElementById('back-to-main-from-pharma');
            const mainContentWrapper = document.getElementById('main-content-wrapper');
            const anatomyPage = document.getElementById('anatomy-page-content');
            const skeletalSystemPage = document.getElementById('skeletal-system-page-content');
            const pharmacologyPage = document.getElementById('pharmacology-page-content');

            // Function to handle page transitions
            function showPage(pageToShow) {
                const pages = [mainContentWrapper, anatomyPage, skeletalSystemPage, pharmacologyPage];
                pages.forEach(page => {
                    if (page === pageToShow) {
                        page.classList.remove('hidden');
                        setTimeout(() => page.style.opacity = '1', 10);
                    } else {
                        page.style.opacity = '0';
                        setTimeout(() => page.classList.add('hidden'), 500);
                    }
                });
            }

            // Mobile menu toggle functionality
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('open');
            });

            // Smooth scrolling for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

            // Event listeners for page navigation
            if (showAnatomyPageButton) {
                showAnatomyPageButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    showPage(anatomyPage);
                });
            }

            if (showSkeletalSystemPageButton) {
                showSkeletalSystemPageButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    showPage(skeletalSystemPage);
                });
            }

            if (showPharmacologyPageButton) {
                showPharmacologyPageButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    showPage(pharmacologyPage);
                });
            }

            if (backToMainButton) {
                backToMainButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    showPage(mainContentWrapper);
                });
            }

            if (backToAnatomyButton) {
                backToAnatomyButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    showPage(anatomyPage);
                });
            }

            if (backToMainFromPharmaButton) {
                backToMainFromPharmaButton.addEventListener('click', (e) => {
                    e.preventDefault();
                    showPage(mainContentWrapper);
                });
            }
        });
    </script>
</body>
